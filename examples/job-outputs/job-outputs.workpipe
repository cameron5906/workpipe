workflow job_outputs {
  on: push

  job build {
    runs_on: ubuntu-latest
    outputs: {
      version: string
      build_number: int
    }
    steps {
      shell { echo "version=1.2.3" >> $GITHUB_OUTPUT }
      shell { echo "build_number=42" >> $GITHUB_OUTPUT }
    }
  }

  job deploy {
    runs_on: ubuntu-latest
    needs: [build]
    steps {
      shell { echo Deploying v${{ needs.build.outputs.version }} (build ${{ needs.build.outputs.build_number }}) }
    }
  }
}
