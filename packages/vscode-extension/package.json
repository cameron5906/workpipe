{
  "name": "workpipe-vscode",
  "displayName": "WorkPipe",
  "description": "Syntax highlighting and diagnostics for WorkPipe DSL",
  "version": "0.0.1",
  "publisher": "workpipe",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/workpipe/workpipe"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:workpipe"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "workpipe",
        "aliases": [
          "WorkPipe",
          "workpipe"
        ],
        "extensions": [
          ".workpipe",
          ".wp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "workpipe",
        "scopeName": "source.workpipe",
        "path": "./syntaxes/workpipe.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "package": "vsce package --no-dependencies"
  },
  "dependencies": {
    "@workpipe/compiler": "workspace:*"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.24.0"
  }
}
